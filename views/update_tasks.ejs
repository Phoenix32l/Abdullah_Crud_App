                <div class="new_task">
                    <div class="form-add">
                        <input type="text" name = "task" class = "text_input" placeholder="Add Task" value ="<%=update_data.task%>">
                        <input type="text" name = "notes" class = "text_input" placeholder="Add Notes" value ="<%=update_data.notes%>">
                        <button type = "submit" class="btn update">Update</button>
                    </div>
                </div>
            </form>


        </div>
    </main>
