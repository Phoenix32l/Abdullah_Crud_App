    <main class="main-site">
        <div class="container">
            <div class="nav-main">
                <div class="filter">
                    <a href="/"><span class = "text-gradient"><i class = "fas fa-angle-double-left"></i>All Tasks</span></a>
                </div>
            </div>
            <div class="form-header text-center">
                <h2 class = "text-styling">Update Task</h2>
